@model List<TelephoneDirectory.Domain.Entity.ContactEntity>

@{
    ViewData["Title"] = "Main Page";
}


@if (Model.Count > 0)
{
    <table class="table" id="contact-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.PhoneNumber</td>
                    <td>
                        <a href="/Dict/Update?id=@contact.Id" class="btn btn-primary">Edit</a>
                        <a href="/Dict/Delete?id=@contact.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div id="no-data">No data available.</div>
}

<a href="/Dict/Add" class="btn btn-success">Add New Contact</a>
