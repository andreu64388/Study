@model TelephoneDirectory.Domain.Entity.ContactEntity   

@{
    ViewBag.Title = "Delete Contact " + @Model.Name;
}

<h2>Delete Contact</h2>

<p>
    Are you sure you want to delete the following contact?
</p>

<div class="contact-details">
    <div class="detail-row">
        <span class="detail-label">Name:</span>
        <span class="detail-value">@Model.Name</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">Id:</span>
        <span class="detail-value">@Model.Id</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">PhoneNumber:</span>
        <span class="detail-value">@Model.PhoneNumber</span>
    </div>
</div>

<form asp-controller="Dict" asp-action="DeleteSave" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="delete-button">Delete</button>
</form>
