<UserControl x:Class="Lab_4_5.UserControls.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lab_4_5.UserControls"
             xmlns:test="clr-namespace:Lab_4_5.Class"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
         DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <TextBlock Text="Enter a number:" />
        <test:NumericTextBox x:Name="numericTextBox" Width="100" Value="{Binding Value, Mode=TwoWay}" />
    </StackPanel>
</UserControl>