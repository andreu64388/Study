@using Contact = ContactRepository.Model.Contact
@model List<ContactRepository.Model.Contact>

 
@{
    ViewData["Title"] = "Main Page";
}

@if (Model.Count > 0)
{
    <table class="table" id="contact-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
      @foreach (var contact in Model)
       {
           @Html.Partial("ItemContact", (object)contact)
       }

        </tbody>
    </table>
}
else
{
    <div id="no-data">No data available.</div>
}

<a href="/Dict/Add" class="btn btn-success">Add New Contact</a>