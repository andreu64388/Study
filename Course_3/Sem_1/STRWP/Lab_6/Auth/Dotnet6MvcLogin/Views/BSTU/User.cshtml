@using Dotnet6MvcLogin.Models.Domain;
@model List<ApplicationUser>

<style>
    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-dialog {
        margin: 50px auto;
        width: 50%;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
    }

    .modal-body {
        margin-bottom: 20px;
    }

    .btn {
        margin-right: 5px;
    }
</style>

@{
    ViewBag.Title = "User";
}

<h1>User Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <span class="display-mode">@user.UserName</span>

                </td>
                <td>
                    <span class="display-mode">@user.Email</span>

                </td>
                <td>
                    
                    <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-success">Update</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

